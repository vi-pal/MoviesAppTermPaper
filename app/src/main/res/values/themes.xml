<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/dark_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Details activity theme. -->
    <style name="Theme.DetailsActivity" parent="Theme.MaterialComponents">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/dark_pink</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="navigationIcon">@drawable/ic_back</item>
        <item name="actionBarStyle">@style/DetailsActionBar</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="DetailsActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="elevation">0dp</item>
        <item name="background">@color/semi_transparent</item>
    </style>


    <!-- TEXT -->
    <style name="CustomTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="RecyclerViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_rv_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxWidth">@dimen/rv_title_max_width</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/margin_rv_small</item>
    </style>

    <style name="CustomItemTitle" parent="CustomTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/text_item_title</item>
        <item name="android:layout_marginEnd">@dimen/margin_normal</item>
    </style>

    <style name="CustomItemTitle.Small" parent="CustomItemTitle">
        <item name="android:textSize">@dimen/text_small_title</item>
    </style>

    <style name="LargeMediumText" parent="CustomTitle">
        <item name="android:textSize">@dimen/text_item_title</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="MiddleSemiBoldText" parent="CustomTitle">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="SmallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallText.Light">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="SmallText.Bright">
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="SmallTitle" parent="CustomTitle">
        <item name="android:textSize">@dimen/text_small_title</item>
    </style>

    <style name="EmptyText" parent="SmallText.Light">
        <item name="android:text">@string/empty</item>
    </style>


    <!-- RECYCLER VIEW -->
    <style name="HorizontalRecyclerView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">@dimen/margin_normal</item>
        <item name="android:minHeight">@dimen/minHeight_horizontal_rv</item>
    </style>

    <!-- IMAGE -->
    <style name="LargePoster">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/img</item>
    </style>


    <style name="RecyclerViewLargeImage">
        <item name="android:layout_width">@dimen/iv_poster_large_width</item>
        <item name="android:layout_height">@dimen/iv_poster_large_height</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/img</item>
    </style>

    <style name="RecyclerViewSmallImage" parent="RecyclerViewLargeImage">
        <item name="android:layout_width">@dimen/iv_poster_small_width</item>
        <item name="android:layout_height">@dimen/iv_poster_small_height</item>
    </style>

    <!-- BUTTONS -->
    <style name="ErrorButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/padding_horizontal_error_btn</item>
        <item name="strokeColor">@color/pink</item>
        <item name="strokeWidth">@dimen/stroke_width_error_btn</item>
        <item name="cornerRadius">@dimen/corner_radius_error_btn</item>
        <item name="android:visibility">gone</item>

        <item name="android:text">@string/try_again</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/pink</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>

        <item name="android:drawableLeft">@drawable/ic_error</item>
        <item name="drawableTint">@color/pink</item>
    </style>

    <style name="ImageViewButton">
        <item name="android:layout_width">@dimen/iv_btn_size</item>
        <item name="android:layout_height">@dimen/iv_btn_size</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- BOX -->
    <style name="DefaultTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/radius_search_box</item>
        <item name="boxCornerRadiusTopStart">@dimen/radius_search_box</item>
        <item name="boxCornerRadiusTopEnd">@dimen/radius_search_box</item>
        <item name="boxCornerRadiusBottomStart">@dimen/radius_search_box</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="DefaultTextInputLayout.Colored">
        <item name="startIconTint">@color/grey</item>
        <item name="hintTextColor">@color/silver</item>
    </style>

</resources>